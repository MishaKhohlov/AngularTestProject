.link-animation
  position relative
  z-index 1
  display block
  color white
  &:hover
    color white
    text-decoration none
    cursor pointer
  &:before, &:after
    pointer-events none;
    box-sizing border-box;
    position absolute;
    z-index -1
    top 0
    left 0
    width 100%
    height 100%
    background app-orange
    border none
    content ''
    transform translateY(0px) translateX(0px)
    transition transform 0.5s, opacity 0.5s
  &:after
    background app-text
    opacity 0
    transform translateY(-15px) translateX(12px)
  &:hover:before, &:focus:before
    opacity 0
    transform:translateY(15px) translateX(-12px)
  &:hover:after, &:focus:after
    opacity:1
    transform:translateY(0px) translateX(0px)

.link-btn
  position relative
  display inline-block