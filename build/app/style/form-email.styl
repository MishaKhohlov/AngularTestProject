.form-email
  &__input
    background app-black
    height 41px
    font-style normal
    padding 10px 10px 11px 13px
    font-size 14px
    line-height 20px
    color white
    &:focus
      border-color app-orange
      box-shadow none
  &__input, &__btn
    bord-rad(0)
    border-color app-orange
  &__btn
    anim-mx(0.3s)
    font-weight 700
    box-sizing border-box
    width 97px
    height 41px
    text-align center
    padding 0
    color app-text-white
    background app-orange
    &:hover
      background app-text-black
      color app-text-white
      border-color app-text-black