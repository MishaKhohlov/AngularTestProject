.form-conteiner-auth
  background white
  padding 0 10px 10px 10px
  margin-bottom 10px
  color black

.form-register, .form-login
  & input
    &.ng-invalid
      border 1px solid red
    &.ng-empty
      border-color grey

.link-close
  display block
  color black

@media (max-width: media-xs)
  .form-conteiner-auth
    margin 10px