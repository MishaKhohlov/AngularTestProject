a.active-page
  background app-orange

.nav-link
  list-style none
  margin-bottom -1px
  &__list-item
    padding 0
  &__item
    padding 41px 15px
    display block
    text-align center
    color white
    font: 700 14px/20px 'Lato', sans-serif;
    &:hover
      color inherit
    &:focus
      text-decoration none
      color inherit

.auth-block-btn, .btn-logout
  margin-top 33px;

.user-name
  margin-top 25px

@media (max-width: media-md)
  .nav-link
    margin-bottom 0
    &__item
      padding 10px 15px

  .authorization-conteiner
    padding 0

  .auth-block-btn
    margin-top 6px

  .btn-logout
    margin-top 0

  .user-name, .user-email
    margin 0