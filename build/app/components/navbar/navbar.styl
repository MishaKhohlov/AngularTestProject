// block menu

.menu
  &__auth-block-btn, &__btn-logout
    margin-top 33px
  &__user-name
    margin-top 25px
  &__user-email
    margin-bottom 0

@media (max-width: media-md)
  .menu
    &__auth-block-btn, &__btn-logout
      margin-top 6px
    &__user-name
      margin 0
    &__auth-wrapper
      padding 0

@media (max-width: media-xs)
  .menu
    margin-bottom 15px

// block nav-link

.nav-link
  list-style none
  margin-bottom -1px
  &__item
    padding 0
  &__item-link
    padding 41px 15px
    display block
    text-align center
    color white
    font 700 14px/20px 'Lato', sans-serif
    text-transform uppercase
    transition 0.2s linear all
    &:hover
      color inherit
      text-decoration none
      background app-orange
    &:focus
      text-decoration none
      color inherit
    &--back-active
      background app-orange

@media (max-width: media-md)
  .nav-link
    margin-bottom 0
    &__item-link
      padding 10px 15px