.benefits
  background app-background
  padding-bottom 28px
  &__slider-wrapper
    overflow hidden

@media (max-width: media-xs)
  .benefits
    padding-bottom 0
    &__slider-wrapper
      padding-bottom 155px
    &__gallery-wrapper
      display none


.slider
  position relative
  &__link
    padding 20px 70px 15px 15px
  &__img
    width 100%
  &__slogan
    position absolute
    top: 30%
    left: 5%
  &__text
    font 400 30px/40px 'Fjalla One', sans-serif
    text-transform uppercase
    color white
    word-spacing -2px
    letter-spacing -1.5px
    text-align left
  &__full-text
    display block
    font-mx(16px, 500, 30px, app-text)
    padding 10px 15px
    background white
    margin-top 6px

@media (max-width: media-xs)
  .slider
    height 230px
    &__img
      width initial
      max-width initial
      min-width 100%
      height 100%
      position absolute
      right 0
    &__text
      font-size 25px
    &__full-text
      line-height 16px
    &__slogan
      top: 245px
      left 0
      width 100%
      padding 0 15px

@media (max-width: media-xss)
  .slider
    &__text
      font-size 20px
      line-height 20px
    &__full-text
      line-height 20px
      padding 10px 5px



.gallery
  padding-top 28px
  &__item-img
    padding-left 0
  &__background-item
    position relative
    background black
    overflow hidden
    height 130px
  &__img
    position absolute
    right 0
    top 0
    height 100%
    min-width 100%
    max-width none
    cursor pointer
    opacity 0.7
    transition 0.5s linear all
    &:hover
      opacity 1

@media (max-width: media-xs)
  .gallery
    &__item-img
      padding-left 15px



.welc-comp
  center-tx()
  title()
  title-description()
  &__background
    background url('../assets/images/bg-1.png') center top no-repeat
    padding-top 100px
    padding-bottom 90px
  &__title-content
    margin-bottom 80px
  &__sub-title
    font: 900 18px/22px 'Lato', sans-serif;
  &__description
    margin-bottom 20px
  &__sub-description
    font-size 18px
    line-height 27px
    font-weight 300
    margin-bottom 20px
  &__link-more, &__link-portfolio
    padding 9px 25px 9px
    letter-spacing 1px
    text-transform uppercase



.comment
  &__background
    background url('../assets/images/parallax-1.jpg') no-repeat
  &__img-wrapper
    float: left;
    margin-right 30px
    width 99px
    bord-rad()
  &__img
    width 100%
  &__description
    padding-top 50px
    padding-bottom 50px
  &__view
    background white
    border-radius 10px
    padding: 30px 90px 25px 45px
    margin 60px 0
    position relative
    &:after, &:before
      width 51px
      height 43px
      position absolute
      content ''
      background-image url('../assets/images/spritesheet.png')
      background-repeat no-repeat
    &:before
      top -60px
      left 5px
      width 51px
      height 43px
      background-position -10px -42px
    &:after
      bottom -60px
      right 5px
      width 51px
      height 43px
      background-position -10px -105px
  &__text-wrap
    overflow hidden
  &__full-text
    padding-bottom 17px
    &-link
      font-mx(14px, 500, 21px, app-text-black)
      transition 0.2s linear all
      &:hover
        text-decoration none
        color app-orange
  &__author
    font-mx(16px, 600, 1, app-orange)

@media (max-width: media-xs)
  .comment
    &__img-wrapper
      display none
    &__view
      padding: 30px



.information
  padding-top 95px
  padding-bottom 60px
  &__item
    margin-bottom 90px
  &__img-wrapper
    bord-rad()
  &__title
    text-transform uppercase
    font 400 30px/30px 'Fjalla One', sans-serif
    margin-bottom 18px
    center-tx()
  &__description
    margin-bottom 20px
    center-tx()
  &__link-portfolio
    font 400 16px/22px 'Lato', sans-serif
    letter-spacing 1px
    padding 9px 25px 9px
    text-transform uppercase

@media(max-width: media-lg)
  .information
    padding-top 70px
    padding-bottom 0
    &__item
      height 404px
      margin-bottom 50px

@media(max-width: media-xs)
  .information
    padding-top 50px
    &__item
      margin-bottom 30px
      height initial
    &__img
      width 70%
    &__link-portfolio
      padding 5px 10px
      font-size 12px



.our-value
  background #e8eef2
  padding-top 100px
  padding-bottom 60px
  title()
  title-description()
  &__title
    margin-bottom 30px
  &__description
    margin-bottom 90px

@media(max-width: media-xs)
  .our-value
    padding-top 60px
    padding-bottom 10px
    &__item
      margin-bottom 40px

  

.company
  padding-top 30px
  padding-bottom 30px
  &__item
    width 11.333333%
    &:hover img
      animation-name:pop;
      animation-duration:0.3s;
      animation-timing-function:linear;
      animation-iteration-count:1;
  &__item-img
    width 100%
    center-blck()
  &__wrapper
    display flex
    justify-content space-between

@keyframes pop
  50%
    -webkit-transform scale(1.2)
    transform scale(1.2);
  100%
    -webkit-transform scale(1)
    transform scale(1)

@media(max-width: media-md)
  .company
    &__item
      width 33.33333333%
    &__item-img
      width initial
    &__wrapper
      display block


