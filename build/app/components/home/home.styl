.home
  background app-background
  padding-bottom 28px
  &__slider-wrapper
    overflow hidden

.slider
  position relative
  &__link
    padding 20px 70px 15px 15px
  &__img
    width 100%
  &__slogan
    position absolute
    top: 30%
    left: 5%
  &__text
    font 400 30px/40px 'Fjalla One', sans-serif
    text-transform uppercase
    color white
    word-spacing -2px
    letter-spacing -1.5px
    text-align left
  &__full-text
    display block
    font-mx(16px, 500, 30px, app-text)
    padding 10px 15px
    background white
    margin-top 6px

@media (max-width: media-xs)
  &__link
    padding 10px 50px 5px 5px
  .slider
    &__text
      font-size 20px
      line-height 20px
      letter-spacing -0.5px
    &__full-text
      font-size 12px


.gallery
  padding-top 28px
  &__item-img
    padding-left 0
  &__background-item
    position relative
    background black
    overflow hidden
    height 130px
  &__img
    position absolute
    right 0
    top 0
    height 100%
    min-width 100%
    max-width none
    cursor pointer
    opacity 0.7
    transition 0.5s linear all
    &:hover
      opacity 1

@media (max-width: media-xs)
  .gallery
    &__item-img
      padding-left 15px

.welc-comp
  center-tx()
  &__background
    background url('../assets/images/bg-1.png') center top no-repeat
    padding 100px 0 90px
  &__title-content
    margin-bottom 80px
  &__title
    letter-spacing -1px
    word-spacing -2px
    text-transform uppercase
    font 400 40px/40px 'Fjalla One', sans-serif
    color app-text-black
  &__sub-title
    font: 900 18px/22px 'Lato', sans-serif;
  &__description
    center-tx()
    font-size 22px
    line-height 32px
    margin-bottom 20px
  &__sub-description
    font-size 18px
    line-height 27px
    font-weight 300
    margin-bottom 20px
  &__link-more, &__link-portfolio
    padding 9px 25px 9px
    letter-spacing 1px
    text-transform uppercase

.comment
  &__background
    background url('../assets/images/parallax-1.jpg') center top no-repeat
  &__description
    background: #fff;
    border-radius: 10px;
    padding: 30px 90px 25px 45px;