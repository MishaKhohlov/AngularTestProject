.benefits
  background app-background
  padding-bottom 28px
  &__slider-wrapper
    overflow hidden


.slider
  position relative
  &__link
    padding 20px 70px 15px 15px
  &__img
    width 100%
  &__slogan
    position absolute
    top: 30%
    left: 5%
  &__text
    font 400 30px/40px 'Fjalla One', sans-serif
    text-transform uppercase
    color white
    word-spacing -2px
    letter-spacing -1.5px
    text-align left
  &__full-text
    display block
    font-mx(16px, 500, 30px, app-text)
    padding 10px 15px
    background white
    margin-top 6px

@media (max-width: media-xs)
  .slider
    &__text
      font-size 20px
      line-height 20px
      letter-spacing -0.5px
    &__full-text
      font-size 12px
    &__link
      padding 10px 50px 5px 5px


.gallery
  padding-top 28px
  &__item-img
    padding-left 0
  &__background-item
    position relative
    background black
    overflow hidden
    height 130px
  &__img
    position absolute
    right 0
    top 0
    height 100%
    min-width 100%
    max-width none
    cursor pointer
    opacity 0.7
    transition 0.5s linear all
    &:hover
      opacity 1

@media (max-width: media-xs)
  .gallery
    &__item-img
      padding-left 15px


.welc-comp
  center-tx()
  title()
  title-description()
  &__background
    background url('../assets/images/bg-1.png') center top no-repeat
    padding 100px 0 90px
  &__title-content
    margin-bottom 80px
  &__sub-title
    font: 900 18px/22px 'Lato', sans-serif;
  &__description
    margin-bottom 20px
  &__sub-description
    font-size 18px
    line-height 27px
    font-weight 300
    margin-bottom 20px
  &__link-more, &__link-portfolio
    padding 9px 25px 9px
    letter-spacing 1px
    text-transform uppercase


.comment
  &__background
    background url('../assets/images/parallax-1.jpg') center top no-repeat
  &__img-wrapper
    float: left;
    margin-right 30px
    width 99px
    bord-rad()
  &__img
    width 100%
  &__description
    padding 65px 0 50px
  &__view
    background white
    border-radius 10px
    padding: 30px 90px 25px 45px
    margin 60px 0
    position relative
    &:after, &:before
      width 51px
      height 43px
      position absolute
      content ''
      background-image url('../assets/images/spritesheet.png')
    &:before
      top -60px
      left 5px
      width 51px
      height 43px
      background-position -10px -42px
    &:after
      bottom -60px
      right 5px
      width 51px
      height 43px
      background-position -10px -105px
  &__text-wrap
    overflow hidden
  &__full-text
    padding-bottom 17px
    &-link
      font-mx(14px, 500, 21px, app-text-black)
      transition 0.2s linear all
      &:hover
        text-decoration none
        color app-orange
  &__author
    font-mx(16px, 600, 1, app-orange)


.information
  padding 95px 0 60px
  &__item
    margin-bottom 90px
  &__img-wrapper
    bord-rad()
  &__title
    text-transform uppercase
    font 400 30px/30px 'Fjalla One', sans-serif
    margin-bottom 18px
    center-tx()
  &__description
    margin-bottom 20px
    center-tx()
  &__link-portfolio
    font 400 16px/22px 'Lato', sans-serif
    letter-spacing 1px
    padding 9px 25px 9px
    text-transform uppercase

@media(max-width: media-lg)
  .information
    padding 70px 0 0
    &__item
      height 404px
      margin-bottom 50px

@media(max-width: media-xs)
  .information
    padding 50px 0 0
    &__item
      margin-bottom 30px

@media(max-width: media-xs)
  .information
    &__item
      height initial
      margin-bottom 50px


.our-value
  background #e8eef2
  padding 100px 0 30px
  title()
  title-description()
  &__title
    margin-bottom 30px
  &__description
    margin-bottom 90px
  &__item-img
    width 100%
  &__img-wrapper
    width 100%
    padding 6px
    background white
    box-shadow 0 4px 4px rgba(0,0,0,0.15)
    margin-bottom 40px
  &__title-list
    color: app-text-black
    text-transform: uppercase
    font 900 20px/24px 'Lato', sans-serif
    margin-bottom 10px
  &__list li
    margin 0
    padding 0 0 0 26px
    font-mx(18px, 300, 30px, app-text-black)
    font-style italic
    position relative
    &:before
      content ''
      position absolute
      left 0
      top 9px
      display block
      background: url('../assets/images/spritesheet.png') -10px -10px no-repeat;
      width: 16px
      height: 12px

@media(max-width: media-xs)
  padding 60px 0 10px
  .our-value
    &__item
      margin-bottom 40px

.company
  padding 30px 0
  &__wrapper
    display flex
    justify-content space-between
  &__item-img
    center-blck()

@media(max-width: media-xs)
  .company
    &__wrapper
      display block


