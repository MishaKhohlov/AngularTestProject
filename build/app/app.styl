@require './style/variables'
@require './style/mixins'

@require './style/my-reset'
@require './style/ng-if-animation'
@require './style/link-animation'
@require './style/list-value'

@require './components/navbar/navbar'
@require './components/navbar/authorization/authorization'
@require './components/home/home'

body
  font-family 'Lato', sans-serif
  font-size 14px
  min-width 320px
  margin 0
  color body-color

// block header

.header
  color: white
  background: app-text
  &__logo
    padding 42px 0 30px

// block footer

.footer
  padding-top 75px
  background app-black
  color app-text-white
  font-family 'Lato', sans-serif
  &__wrap-information
    border-bottom 3px solid app-border
    padding-bottom 60px
  &__title
    letter-spacing 0
    word-spacing 0
    font-mx(16px, 900, 20px)
    text-align left
    margin-bottom 30px
    text-transform uppercase
    &--magrin-min
      margin-bottom 10px
  &__item
    font-weight 400
    line-height 23px
  &__item-link
    color app-text-white
    font-size 14px
    line-height 23px
    font-weight 300
    anim-mx()
    &:hover, &:focus
      color app-orange
      text-decoration none
    &--color-active
      color app-orange
      text-decoration none
  &__connect
    display block
    overflow hidden
    &:before
      content: ''
      display inline-block
      width 1px
      position: absolute
      left 0
      top: 10px
      bottom 0
      background: app-border
  &__list-social
    margin-bottom 95px
  &__email-block
    margin-bottom 20px
  &__map
    color black
    min-height 300px
    padding 0

@media(max-width: media-xs)
  .footer
    &__title
      margin-bottom 15px
    &__column
      margin-bottom 28px
    &__connect
      &:before
        display none



.form-email
  &__input
    background app-black
    height 41px
    font-style normal
    padding 10px 10px 11px 13px
    font-size 14px
    line-height 20px
    color white
    &:focus
      border-color app-orange
      box-shadow none
  &__input, &__btn
    bord-rad(0)
    border-color app-orange
  &__btn
    anim-mx(0.3s)
    font-weight 700
    box-sizing border-box
    width 97px
    height 41px
    text-align center
    padding 0
    color app-text-white
    background app-orange
    &:hover
      background app-text-black
      color app-text-white
      border-color app-text-black



.list-social
  margin-left -10px
  &__item
    display inline-block
  &__link
    color app-text-white
    font-size 31px
    line-height 31px
    anim-mx()
    &:hover
      color app-orange

@media(max-width: media-lg)
  .list-social
    &__link
      font-size 25px
      line-height 25px



.coopyright
  padding-top 45px
  padding-bottom 45px
  text-align center
  &__title
    text-transform uppercase
    font-weight 900
  &__years
    font-weight 400
  &__link
    color inherit
    text-transform none
    font-weight 400
    &:hover, &:focus
      color app-orange
      text-decoration none
  &__sub-title
    display none
    cursor pointer
    margin-top 10px
    font-size 11px
    anim-mx()
    &:hover
      text-decoration underline

@media(max-width: media-lg)
  .coopyright
    &__sub-title
      display block




